doctype
div.container
  div.new
    div.actions(
      *ngIf = '!show'
      )
      a.btn(
        (click) = 'onClick()'
        )
        | Nowy Post
    div(
      *ngIf = 'show'
      )
      app-form(
        type = 'post',
        (cancel) = 'onClick()',
        (submit) = 'onClick()'
        )
div(
  *ngFor = 'let post of posts'
  )
  app-post(
    [post] = 'post'
  )

